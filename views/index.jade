extends layout

block content
  .page-header
    h1
      = title
      small &nbsp;Welcome to #{title}
  .page-header
    h1 Login
    form.form-horizontal(action='/users/login' method='POST')
      .form-group
        label.col-sm-2.control-label Username
        .col-sm-10
          input.form-control(type='text' name='username' placeholder='Username')
      .form-group
        label.col-sm-2.control-label Passwrod
        .col-sm-10
          input.form-control(type='password' name='password' placeholder='Password')
      .form-group
        .col-sm-offset-2.col-sm-10
          input.btn.btn-primary(type='submit' value='Login')